<Window x:Class="ProjektSemestralny.PersonelSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="PersonelSearchWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/background.jpg"/>
        </Grid.Background>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="182" Margin="10,227,0,0" VerticalAlignment="Top" Width="772"/>
        <Button x:Name="searchButton" Content="Załaduj" HorizontalAlignment="Left" Foreground="White" Background="Gray" Margin="344,178,0,0" VerticalAlignment="Top" Width="102" Height="31" Click="searchButton_Click"/>
        <TextBox x:Name="search_TextBox" HorizontalAlignment="Left" Height="39" Margin="330,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" TextChanged="search_TextBox_TextChanged" IsEnabled="False"/>
        <Button Content="Cofnij" HorizontalAlignment="Left" Margin="42,43,0,0" Foreground="White" Background="Gray" VerticalAlignment="Top" Width="84" Click="Button_Click" Height="34"/>

    </Grid>
</Window>
